rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Publicly readable collections
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can create/edit/delete
    }

    match /internships/{internshipId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can create/edit/delete
    }

    // Users can only read their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Application collections
    match /jobApplications/{applicationId} {
      allow create: if request.auth != null; // Allow authenticated users to create
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId; // User can manage their own
      allow list, delete, update: if request.auth != null; // Admin can manage all
    }

    match /internshipApplications/{applicationId} {
      allow create: if request.auth != null; // Allow authenticated users to create
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId; // User can manage their own
      allow list, delete, update: if request.auth != null; // Admin can manage all
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /resumes/{fileName} {
      allow write: if request.auth != null;
    }
    match /marksheets/10th/{fileName} {
      allow write: if request.auth != null;
    }
    match /marksheets/12th/{fileName} {
      allow write: if request.auth != null;
    }
    match /cgpa_proofs/{fileName} {
      allow write: if request.auth != null;
    }
    match /certificates/{fileName} {
      allow write: if request.auth != null;
    }
    // Allow authenticated users to read any file (e.g., to display uploaded files)
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow write access to the 'internshipApplications' collection
    match /internshipApplications/{docId} {
      allow create: if true; // Allow creating new documents
      allow read, write, delete: if false; // Deny other operations
    }

    // Allow write access to the 'jobApplications' collection
    match /jobApplications/{docId} {
      allow create: if true; // Allow creating new documents
      allow read, write, delete: if false; // Deny other operations
    }

    // Deny access to all other documents by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}